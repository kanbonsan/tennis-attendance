{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "types": ["svelte"],
        "strict": true,
        "baseUrl": "."
    },
    "include": [
        "resources/js/**/*",
        "resources/views/**/*",
        "resources/js/**/*.svelte"
    ]
}
